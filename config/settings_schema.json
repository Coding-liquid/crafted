[
  {
    "name": "theme_info",
    "theme_name": "Crafted",
    "theme_version": "1.0.0",
    "theme_author": "Design Agency Platform",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Design Agency Platform",
    "settings": [
      {
        "type": "header",
        "content": "Platform Configuration"
      },
      {
        "type": "text",
        "id": "platform_name",
        "label": "Platform Name",
        "default": "Crafted"
      },
      {
        "type": "text",
        "id": "agency_name",
        "label": "Agency Name",
        "default": "Your Design Agency"
      },
      {
        "type": "header",
        "content": "File Upload Settings"
      },
      {
        "type": "range",
        "id": "max_file_size_mb",
        "min": 1,
        "max": 50,
        "step": 1,
        "unit": "MB",
        "label": "Maximum File Size",
        "default": 10
      },
      {
        "type": "text",
        "id": "allowed_file_types",
        "label": "Allowed File Types",
        "default": "jpg,jpeg,png,gif,pdf,doc,docx,psd,ai,sketch",
        "info": "Comma-separated list of file extensions"
      },
      {
        "type": "header",
        "content": "Request Settings"
      },
      {
        "type": "range",
        "id": "max_requests_per_month",
        "min": 1,
        "max": 100,
        "step": 1,
        "label": "Max Requests per Month (Basic)",
        "default": 5
      },
      {
        "type": "range",
        "id": "max_requests_per_month_premium",
        "min": 1,
        "max": 100,
        "step": 1,
        "label": "Max Requests per Month (Premium)",
        "default": 50
      },
      {
        "type": "header",
        "content": "Notification Settings"
      },
      {
        "type": "checkbox",
        "id": "email_notifications",
        "label": "Email Notifications",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "browser_notifications",
        "label": "Browser Notifications",
        "default": true
      }
    ]
  }
]
